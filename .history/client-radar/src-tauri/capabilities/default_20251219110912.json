{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "C:\\**", "D:\\**", "E:\\**", "F:\\**"]
    }
  ]
}